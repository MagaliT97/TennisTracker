<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MATCH "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" "
            android:textSize="20dp" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match5_J1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="J1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="vs"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/match5_J2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="J2"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/scoreJ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scoreJ1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" VS "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/scoreJ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scoreJ2"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aces : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/acesJ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="acesJ1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" VS "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/acesJ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="acesJ2"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fautes : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fauteJ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fauteJ1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" VS "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fauteJ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fauteJ2"
                android:textSize="15dp" />

        </LinearLayout>

</LinearLayout>